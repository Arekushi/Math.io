<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/matter_image"
            android:contentDescription="@null"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/potencia"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/matter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/potencia"
            android:layout_marginTop="30dp"
            android:textSize="36sp"
            android:fontFamily="monospace"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginHorizontal="20dp"
            android:breakStrategy="high_quality"
            android:layout_below="@id/matter_image" />

        <TextView
            android:id="@+id/matter_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/potencia_text"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textColor="@android:color/white"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="20dp"
            android:breakStrategy="high_quality"
            android:layout_below="@id/matter_title" />
    </RelativeLayout>

</ScrollView>